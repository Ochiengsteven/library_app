<% content_for :title, "Books" %>

<div class="books-container">
  <% if notice.present? %>
    <p class="notice-message" id="notice"><%= notice %></p>
  <% end %>

  <div class="header-container">
    <h1 class="page-title">Books</h1>
    <%# link_to "New book", new_book_path, class: "new-book-button" %>
  </div>

  <div id="books" class="books-grid">
    <% if @books.any? %>
      <% @books.each do |book| %>
        <%= render book %>
      <% end %>
    <% else %>
      <p class="no-books-message">No books found.</p>
    <% end %>
  </div>
</div>
